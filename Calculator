package com.sample;
import java.lang.*;
import java.util.Scanner;

public class Calculator {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter a num: ");
		int num1 = sc.nextInt();
		System.out.println("Enter another num: ");
		int num2 = sc.nextInt();
		System.out.println("Enter choice of operation: ");
		char choice = sc.next().charAt(0);
		
		switch(choice) {
		
		case '+' : System.out.println("Addition of two numbers: "+ (num1+num2));
				   break;
				   
		case '-' : System.out.println("Subtraction of two numbers: "+ (num1-num2));
				   break;
				   
		case '*' : System.out.println("Multiplication of two numbers: "+ (num1*num2));
				   break;
				   
		case '/' : System.out.println("Division of two numbers: "+ (num1/num2));
				   break;
				   
		default : System.out.println("Invalid choice!");
		
		
		
		}
		sc.close();

	}

}

OUTPUT:

Enter a num: 
30
Enter another num: 
5
Enter choice of operation: 
/
Division of two numbers: 6
