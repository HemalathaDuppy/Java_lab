package com.sample;

interface Restaurant {
    void printName();
    void addItem(String item);
    String[] getMenu();
    void placeOrder(String item);
    double generateBill();
}

class KFC implements Restaurant {
    String name = "KFC";
    String[] menu = {"Burger", "Fries", "Chicken"};
    double totalAmount = 0;

    public void printName() {
        System.out.println("Restaurant: " + name);
    }

    public void addItem(String item) {
        System.out.println(item + " added to menu.");
    }

    public String[] getMenu() {
        return menu;
    }

    public void placeOrder(String item) {
        System.out.println("Order placed: " + item);
        totalAmount += 100; // simple fixed price
    }

    public double generateBill() {
        double bill = totalAmount + totalAmount * 0.06;
        System.out.println("Total Bill (with 6% tax): " + bill);
        return bill;
    }
}

public class MainResturant {
    public static void main(String[] args) {
        KFC kfc = new KFC();
        kfc.printName();
        kfc.placeOrder("Burger");
        kfc.placeOrder("Fries");
        kfc.generateBill();
    }
}

OUTPUT:
Restaurant: KFC
Order placed: Burger
Order placed: Fries
Total Bill (with 6% tax): 212.0
