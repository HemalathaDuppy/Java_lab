package com.sample;
import java.lang.*;
import java.util.Scanner;

public class BankApplication {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		System.out.println(" 1. Account Creation\n 2. Credit Amount\n 3. Debit Amount\n 4. Mini Statement/Balance enquiry\n 5. Transfer Account\n 6. Continue\n 7. Exit");
		
		System.out.println("Enter your choice: ");
		int choice = sc.nextInt();
		
		switch(choice) {
		
		
		case 1 : System.out.println("Welcome to Account Creation!");
				 System.out.println("Enter Account Holder Name: ");
				 String name = sc.next();
				 System.out.println("Enter Aadhar number: ");
				 String AadharNo = sc.next();
				 System.out.println("Enter PAN number: ");
				 String Pan = sc.next();
				 System.out.println("Holder name, Aadhar No, PAN No entered succesfully!");
				 System.out.println("Thank you.");
				 break;
			
		case 2 : System.out.println("Welcome to Credit Amount!");
				 System.out.println("Enter Account Number: ");
				 String AccNo = sc.next();
				 System.out.println("Enter Amount to be credited: ");
				 double Credit = sc.nextDouble();
				 System.out.println(Credit + " is credited succesfully!");
				 System.out.println("Thank you.");
				 break;
				 
			
		case 3 : System.out.println("Welcome to Debit Amount!");
				 System.out.println("Enter Account Number: ");
				 String AccN = sc.next();
				 System.out.println("Enter Amount to be credited: ");
				 double Debit = sc.nextDouble();
				 System.out.println(Debit + " is debited succesfully!");
				 System.out.println("Thank you.");
				 break;
			
		case 4 : System.out.println("Welcome to Mini statement or Balance Enquiry!");
				 System.out.println("Your Bank Balance is XXXXXX");
				 System.out.println("Thank you.");
				 break;
			
		case 5 : System.out.println("Welcome to Transfer Account!");
				 System.out.println("Enter old Account Number: ");
				 String oldacc = sc.next();
				 System.out.println("Enter new Account Number: ");
				 String newacc = sc.next();
				 System.out.println("Enter Amount to be transferred: ");
				 double amt = sc.nextDouble();
				 System.out.println(amt +" is transferred succesfully!");
				 System.out.println("Thank you.");
				 break;
			
		case 6 : System.out.print("Do you want to continue (y/n)? ");
	    		 String input = sc.next();  
	    		 char ch = input.charAt(0);

	    		 if (ch == 'y' || ch == 'Y') {
	    		 System.out.println("Going back to main menu...");
	        
	    		 } else if (ch == 'n' || ch == 'N') {
	    		 boolean running = false;  // stop loop
	    		 System.out.println("Thank you for using the Bank App!");
	    		 } else {
	             System.out.println("Invalid input! Please enter y or n.");
	    		 }
	    		 break;
			
		case 7 : System.out.println("Exiting...");
		 		 System.out.println("Thank you.");
				 break;
			
		
		
		} sc.close();
		
		

	}

}

OUTPUT:
1. Account Creation
 2. Credit Amount
 3. Debit Amount
 4. Mini Statement/Balance enquiry
 5. Transfer Account
 6. Continue
 7. Exit
Enter your choice: 
