package com.sample;

public class StarPattern {
    public static void main(String[] args) {
        int n = 5; // number of rows for the top half

        // Top half of diamond
        for (int i = 1; i <= n; i++) {
            // Print spaces
            for (int j = i; j < n; j++) {
                System.out.print(" ");
            }
            // Print stars
            for (int j = 1; j <= (2 * i - 1); j++) {
                System.out.print("*");
            }
            System.out.println();
        }

        // Bottom half of diamond
        for (int i = n - 1; i >= 1; i--) {
            // Print spaces
            for (int j = i; j < n; j++) {
                System.out.print(" ");
            }
            // Print stars
            for (int j = 1; j <= (2 * i - 1); j++) {
                System.out.print("*");
            }
            System.out.println();
        }
    }
}


OUTPUT:
    *
   ***
  *****
 *******
*********
 *******
  *****
   ***
    *
